{% extends "base.twig" %} 

{% block title %}Liste des posts{% endblock %}

{% block content %}
    
    <h2>Derniers billets :</h2>

    {% for post in posts %}
            <div class = "news">
                <h3> {{ post.title }} le {{ post.creation_date }} </h3> 
                    <p> 
                       {{ post.content|nl2br }}
                        </br>
                        <a href="post/{{post.id}}"> Commentaires </a> <!-- TODO : Change URL-->
                    </p>
            </div>
    {% endfor %}

    {% if message %}
        <p>{{message}}</p>
    {% endif %}
    
{% endblock %}